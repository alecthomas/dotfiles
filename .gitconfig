[color]
  branch = auto
  diff = auto
  status = auto

[status]
  showUntrackedFiles = all

[core]
  excludesfile = ~/.gitignorerc
  mergeoptions = --no-ff
  editor = vim
  autocrlf = input
  ignorecase = false
[user]
  name = Alec Thomas
  email = alec@swapoff.org
[sendemail]
  smtpserver = smtp.gmail.com
  smtpuser = alec@swapoff.org
  smtpencryption = ssl
[log]
  decorate = true
[alias]
  rc = rebase --continue
  ra = rebase --abort
  p = push --follow-tags
  pp = !git pull --rebase && git push --follow-tags
  st = status
  br = branch
  ui = !open -a GitX
  co = checkout
  ci = commit
  ca = commit -a
  caa = commit -a --amend
  log = log --topo-order --first-parent --graph --decorate
  sl = log --format=oneline
  ds = diff --stat
  dm = !git diff $(git merge-base master HEAD)
  do = diff origin
  names = diff master --name-only
  dms = diff master --stat
  l = log --graph --decorate --oneline
  la = log --graph --decorate --oneline --all
  rc = rebase --continue
  rbm = rebase master
  dh = diff HEAD
  exec = "!exec "
  mt = mergetool
  untracked = ls-files --others --exclude-standard
  create-pull-request = !sh -c 'stash pull-request $0 $@'

[branch]
  autosetupmerge = true
  autosetuprebase = always
[rerere]
  enabled = 1
[rebase]
  autosquash = true
[giggle]
  main-window-maximized = false
  main-window-geometry = 1441x975+365+106
  history-view-vpane-position = 539
  main-window-view = HistoryView
  file-view-vpane-position = 346
[diff]
  renamse = true
[push]
  config = default
  default = current
[pull]
  rebase = true
[mergetool "diffmerge"]
  cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
  trustExitCode = true
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[merge]
  tool = Kaleidoscope
  summary = true
[credential]
  helper = osxkeychain
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[github]
  user = alecthomas
[ghi]
  token = !security find-internet-password -a alecthomas -s github.com -l 'ghi token' -w
[http "https://gopkg.in"]
  followRedirects = true
